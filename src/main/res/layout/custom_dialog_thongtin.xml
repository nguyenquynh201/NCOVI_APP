<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10sp"
    android:background="@drawable/custom_dialog"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp">
        <TextView
            android:background="@drawable/custom_dialog_tinhthanhpho"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Chỉnh sửa tỉnh thành phố"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/helveticaneue_bold"
            android:textColor="@color/color_main"
            />
    </LinearLayout>
   <LinearLayout
       android:layout_width="wrap_content"
       android:orientation="vertical"
       android:layout_margin="10sp"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <LinearLayout
               android:weightSum="10"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:layout_weight="1"
                   android:layout_gravity="center"
                   android:id="@+id/tv_spinnerTP_update"
                   android:layout_width="match_parent"
                   android:gravity="center_vertical"
                   android:paddingStart="10sp"
                   android:textSize="18sp"
                   android:hint="Chọn tỉnh"
                   android:textColorHint="@color/color_border"
                   android:layout_height="50sp"/>

               <Spinner
                   android:layout_weight="9"
                   android:gravity="center"
                   android:id="@+id/spinner_TP_update"
                   android:layout_width="match_parent"
                   android:layout_height="50sp"
                   android:layout_marginTop="10sp" />

           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="1.5sp"
               android:background="@color/color_main"
               tools:ignore="SmallSp" />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10sp"
           android:orientation="vertical">
           <LinearLayout
               android:weightSum="10"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:layout_weight="1"
                   android:layout_gravity="center"
                   android:id="@+id/tv_spinnerQH_update"
                   android:layout_width="match_parent"
                   android:gravity="center_vertical"
                   android:hint="Chọn quận huyện"
                   android:paddingStart="10sp"
                   android:textSize="18sp"
                   android:layout_height="50sp"/>

               <Spinner
                   android:layout_weight="9"
                   android:gravity="center"
                   android:id="@+id/spinner_QH_update"
                   android:layout_width="match_parent"
                   android:layout_height="50sp"
                   android:layout_marginTop="10sp" />

           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="1.5sp"
               android:background="@color/color_main"
               tools:ignore="SmallSp" />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10sp"
           android:orientation="vertical">
           <LinearLayout
               android:weightSum="10"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:layout_weight="1"
                   android:layout_gravity="center"
                   android:id="@+id/tv_spinnerPX_update"
                   android:gravity="center_vertical"
                   android:paddingStart="10sp"
                   android:hint="Chọn phường xã"
                   android:textSize="18sp"
                   android:layout_width="match_parent"
                   android:layout_height="50sp"/>

               <Spinner
                   android:layout_weight="9"
                   android:gravity="center"
                   android:id="@+id/spinner_PX_update"
                   android:layout_width="match_parent"
                   android:layout_height="50sp"
                   android:layout_marginTop="10sp" />

           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="1.5sp"
               android:background="@color/color_main"
               tools:ignore="SmallSp" />
       </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_toast"
        android:layout_marginTop="15sp">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_weight="5"

            android:background="@drawable/custom_btn"
            android:fontFamily="@font/helveticaneue_bold"
            android:text="Thay đổi"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginEnd="5sp"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_marginStart="5sp"
            android:id="@+id/btn_clear"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_weight="5"
            android:background="@drawable/custom_btn_border"
            android:fontFamily="@font/helveticaneue_bold"
            android:text="Hủy"
            android:textColor="@color/color_main"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</LinearLayout>