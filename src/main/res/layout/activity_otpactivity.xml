<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity.OTPActivity"
    tools:ignore="NamespaceTypo">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ScrollViewSize">
    <ImageView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/otp"
        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="OTP"
    android:textSize="24sp"
    android:textColor="@color/color_main"
    android:fontFamily="@font/helveticaneue_bold"
    android:gravity="center"

    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập mã OTP cho số điện thoại"
        android:textSize="16sp"
        android:textColor="@color/color_border"
        android:fontFamily="@font/hindsiliguri_medium"
        android:gravity="center"

        />
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/helveticaneue_bold"
        android:gravity="center"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
         android:orientation="horizontal">
        <EditText
            android:id="@+id/input_1"
            android:layout_width="40sp"
            android:layout_height="45sp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
           android:textAlignment="center"

            android:maxLength="1"
            android:textColor="@color/color_main"/>
        <EditText
            android:id="@+id/input_2"
            android:layout_width="40sp"
            android:layout_height="45sp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:textAlignment="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/color_main"/>
        <EditText
            android:id="@+id/input_3"
            android:layout_width="40sp"
            android:layout_height="45sp"
            android:imeOptions="actionNext"
            android:textAlignment="center"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/color_main"/>
        <EditText
            android:id="@+id/input_4"
            android:layout_width="40sp"
            android:layout_height="45sp"
            android:textAlignment="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/color_main"/>
        <EditText
            android:id="@+id/input_5"
            android:layout_width="40sp"
            android:layout_height="45sp"
            android:textAlignment="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/color_main"/>
        <EditText
            android:id="@+id/input_6"
            android:layout_width="40sp"
            android:layout_height="45sp"
            android:textAlignment="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/color_main"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn chưa nhận được mã?"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/hindsiliguri_medium"
            />
        <TextView
            android:layout_marginStart="10sp"
            android:id="@+id/tv_Resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gửi lại OTP"
            android:textSize="16sp"
            android:textColor="@color/color_main"
            android:fontFamily="@font/helveticaneue_bold"
            />
    </LinearLayout>
    <Button
        android:layout_marginTop="40sp"
        android:layout_width="280sp"
        android:layout_height="50sp"
        android:textColor="@color/white"
        android:background="@drawable/custom_btn"
        android:text="Xác nhận"
        android:id="@+id/btn_otp"
        android:textSize="18sp"
        android:layout_gravity="center"/>
</LinearLayout>
</ScrollView>