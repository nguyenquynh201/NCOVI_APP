<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"

    tools:context=".View.Fragments.Child1FeedBackFragment"
    tools:ignore="HardcodedText">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120sp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="5sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticaneue_bold"
                    android:text="Phản ánh thông tin"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hindsiliguri_medium"
                    android:text="Vui lòng liên hệ thông tin hoặc đường dây nóng"
                    android:textColor="@color/color_border" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:background="@drawable/custom_bg_tuvong"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="50sp"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_feedback_phone">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_icon_phone_feedback" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10sp"
                        android:fontFamily="@font/helveticaneue_bold"
                        android:gravity="center"
                        android:text="19009095"
                        android:textColor="#8A1A1A"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10sp">

                <TextView
                    android:id="@+id/tv_truonghop_fb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticaneue_bold"
                    android:text="Chọn các trường hợp phản ánh"
                    android:textColor="@color/color_text_feedback"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/cb_feedback_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableStart="@drawable/custom_checkbox"
                    android:fontFamily="@font/hindsiliguri_medium"
                    android:text="Có người tiếp xúc với trường hợp từ vùng dịch nghi ngờ mắc bệnh COVID-19"
                    android:textColor="@color/color_text_feedback"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5sp"
                    android:background="@color/color_bg"
                    tools:ignore="SmallSp" />

                <CheckBox
                    android:id="@+id/cb_feedback_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableStart="@drawable/custom_checkbox"
                    android:fontFamily="@font/hindsiliguri_medium"
                    android:text="Có người tiếp xúc với trường hợp bênh hoặc nghi ngờ mắc bệnh COVID-19"
                    android:textColor="@color/color_text_feedback"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5sp"
                    android:background="@color/color_bg"
                    tools:ignore="SmallSp" />

                <CheckBox
                    android:id="@+id/cb_feedback_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableStart="@drawable/custom_checkbox"
                    android:fontFamily="@font/hindsiliguri_medium"
                    android:text="Có người tiếp xúc với trường hợp bênh hoặc nghi ngờ mắc bệnh COVID-19"
                    android:textColor="@color/color_text_feedback"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5sp"
                    android:background="@color/color_bg"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/content_fb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticaneue_bold"
                    android:text="Nội dung phản ánh"
                    android:textColor="@color/color_text_feedback"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edt_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:background="@drawable/custom_edittext_feedbackt"
                    android:fontFamily="@font/hindsiliguri_medium"
                    android:gravity="top"
                    android:hint="Nhập nội dung"
                    android:inputType="textAutoComplete"
                    android:padding="10sp"
                    android:textColorHint="@color/color_bg_feedback" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout


                    android:id="@+id/lnl_feedback_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lnl_tt_4"
                    android:orientation="vertical"
                    android:padding="10sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_time_fb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/hindsiliguri_medium"
                            android:textColor="@color/color_title_edittext"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/tv_time_feedback"
                                android:layout_width="match_parent"
                                android:layout_height="50sp"
                                android:layout_gravity="center"
                                android:layout_weight="5"
                                android:fontFamily="@font/hindsiliguri_medium"
                                android:gravity="center_vertical"
                                android:paddingStart="10sp"

                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <ImageView
                                android:id="@+id/img_feedback"
                                android:layout_width="50sp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:src="@drawable/ic_ngaysinh" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5sp"
                            android:background="@color/color_bg"
                            tools:ignore="SmallSp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_address_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hindsiliguri_medium"
                        android:textColor="@color/color_title_edittext"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/tv_spinnerTP_feedback"
                                android:layout_width="match_parent"
                                android:layout_height="50sp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:fontFamily="@font/hindsiliguri_medium"
                                android:gravity="center_vertical"
                                android:hint="Chọn Thành phố"
                                android:paddingStart="10sp"
                                android:textColorHint="@color/color_bg_feedback"
                                android:textSize="18sp" />

                            <Spinner
                                android:id="@+id/spinner_TP_feedback"
                                android:layout_width="match_parent"
                                android:layout_height="50sp"
                                android:layout_marginTop="10sp"
                                android:layout_weight="9"
                                android:gravity="center" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5sp"
                            android:background="@color/color_bg"
                            tools:ignore="SmallSp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/tv_spinnerQH_feedback"
                                android:layout_width="match_parent"
                                android:layout_height="50sp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:fontFamily="@font/hindsiliguri_medium"
                                android:gravity="center_vertical"
                                android:hint="Chọn Quận/Huyện"
                                android:paddingStart="10sp"
                                android:textColorHint="@color/color_bg_feedback"
                                android:textSize="18sp" />

                            <Spinner
                                android:id="@+id/spinner_QH_feedback"
                                android:layout_width="match_parent"
                                android:layout_height="50sp"
                                android:layout_marginTop="10sp"
                                android:layout_weight="9"
                                android:gravity="center" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5sp"
                            android:background="@color/color_bg"
                            tools:ignore="SmallSp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            android:weightSum="10">

                            <TextView
                                android:id="@+id/tv_spinnerPX_feedback"
                                android:layout_width="match_parent"
                                android:layout_height="50sp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:fontFamily="@font/hindsiliguri_medium"
                                android:gravity="center_vertical"
                                android:hint="Chọn Xã/Phường"
                                android:paddingStart="10sp"
                                android:textColorHint="@color/color_bg_feedback"
                                android:textSize="18sp" />

                            <Spinner
                                android:id="@+id/spinner_PX_feedback"
                                android:layout_width="match_parent"
                                android:layout_height="50sp"
                                android:layout_marginTop="10sp"
                                android:layout_weight="9"
                                android:gravity="center" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5sp"
                            android:background="@color/color_bg"
                            tools:ignore="SmallSp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edt_diachi"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginTop="20sp"
                        android:background="@drawable/custom_edittext_tt"
                        android:drawableStart="@drawable/ic_diachi"
                        android:drawablePadding="10sp"
                        android:fontFamily="@font/hindsiliguri_medium"
                        android:hint="Nhập số nhà"
                        android:inputType="text"
                        android:paddingStart="10sp"
                        android:textColorHint="@color/color_edittext_1"
                        tools:ignore="HardcodedText,RtlSymmetry" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnl_feedback_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10sp">

                    <CheckBox
                        android:id="@+id/cb_thongtin_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableStart="@drawable/custom_checkbox"
                        android:text="Tôi cam kết các thông tin khai là đúng sự thật và đồng ý với Điều khoản sử dụng"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnl_tt_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10sp">

                    <Button
                        android:id="@+id/btn_thongtin_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:background="@drawable/custom_btn"
                        android:fontFamily="@font/hindsiliguri_medium"
                        android:text="Đồng ý"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/no_btn_thongtin_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:background="@drawable/custom_btn_noclick"
                        android:fontFamily="@font/hindsiliguri_medium"
                        android:text="Đồng ý"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>