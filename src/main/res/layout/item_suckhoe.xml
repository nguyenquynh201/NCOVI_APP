<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="@drawable/custom_circle_sk"
                tools:ignore="SmallSp" />

            <View
                android:layout_width="2sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:background="@color/color_main" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="5sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_date_sk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hindsiliguri_medium"
                android:text="XX/XX/XXXX"
                android:textColor="@color/color_main"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

               <RelativeLayout
                   android:padding="10sp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                  <RelativeLayout
                      android:id="@+id/rlt_tt_1"
                      android:layout_width="wrap_content"
                      android:background="@drawable/custom_bg_sk"
                      android:layout_height="wrap_content">
                      <TextView
                          android:id="@+id/tv_canhbao_sk"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/helveticaneue_bold"
                          android:padding="5sp"
                          android:textColor="@color/white"
                          android:textSize="16sp" />
                  </RelativeLayout>

                   <TextView

                       android:id="@+id/tv_tt_sk"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentBottom="true"
                       android:fontFamily="@font/hindsiliguri_medium"
                       android:text="Thông tin sức khỏe"
                       android:layout_marginBottom="20sp"
                       android:textColor="@color/black"
                       android:textSize="14sp" />

                   <TextView
                       android:id="@+id/tv_tinhtrang_sk"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentBottom="true"
                       android:layout_marginStart="10sp"
                       android:layout_marginBottom="20sp"
                       android:layout_toRightOf="@id/tv_tt_sk"
                       android:fontFamily="@font/hindsiliguri_regular"
                       android:textColor="@color/black" />

                   <TextView
                       android:id="@+id/tv_time_sk"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentEnd="true"
                       android:layout_marginEnd="24sp"
                       android:fontFamily="@font/hindsiliguri_medium"
                       android:text="21:23"
                       android:textColor="@color/color_border"
                       android:textSize="18sp" />
               </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>