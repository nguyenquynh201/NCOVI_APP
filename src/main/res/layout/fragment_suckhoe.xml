<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragments.SucKhoeFragment">

    <TextView
        android:id="@+id/tv_suckhoe_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24sp"
        android:layout_marginTop="24sp"
        android:layout_marginEnd="24sp"
        android:layout_marginBottom="24sp"
        android:fontFamily="@font/helveticaneue_bold"
        android:text="Theo dõi sức khỏe"
        android:textColor="@color/color_main"
        android:textSize="24sp" />
    <LinearLayout
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_below="@id/tv_suckhoe_main"
        android:id="@+id/lnl_sk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn thông tin sức khỏe hiện tại của bạn"
            android:textColor="@color/color_border"
            android:fontFamily="@font/hindsiliguri_medium"
            android:textSize="14sp"
            />
        <LinearLayout

            android:weightSum="10"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
         <LinearLayout
             android:id="@+id/lnl_sk_1"
             android:layout_weight="3"
             android:padding="10sp"
             android:background="@drawable/custom_suckhoe"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

             <CheckBox
                 android:text="Sốt"
                 android:id="@+id/cb_suckhoe_0"
                 android:layout_width="match_parent"
                 android:textSize="18sp"
                 android:button="@null"
                 android:drawableStart="@drawable/custom_checkbox"
                 android:layoutDirection="rtl"
                 android:textColor="@color/black"
                 android:fontFamily="@font/hindsiliguri_regular"
                 android:layout_height="wrap_content"/>

         </LinearLayout>
            <LinearLayout
                android:id="@+id/lnl_sk_2"
                android:layout_marginStart="10sp"
                android:layout_weight="3"
                android:padding="10sp"
                android:weightSum="10"
                android:background="@drawable/custom_suckhoe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_suckhoe_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ho"
                    android:button="@null"
                    android:drawableStart="@drawable/custom_checkbox"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/hindsiliguri_regular"
                    android:layoutDirection="rtl"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnl_sk_3"
                android:layout_marginStart="10sp"
                android:layout_weight="3"
                android:padding="10sp"
                android:background="@drawable/custom_suckhoe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/cb_suckhoe_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khó thở"
                    android:button="@null"
                    android:drawableStart="@drawable/custom_checkbox"
                    android:layoutDirection="rtl"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/hindsiliguri_regular"

                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/lnl_sk_4"
                android:layout_weight="5"
                android:padding="10sp"
                android:layout_gravity="center"
                android:background="@drawable/custom_suckhoe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:text="Đau người mệt mỏi"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layoutDirection="rtl"
                    android:button="@null"
                    android:drawableStart="@drawable/custom_checkbox"
                    android:fontFamily="@font/hindsiliguri_regular"
                    android:id="@+id/cb_suckhoe_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnl_sk_5"
                android:layout_marginStart="10sp"
                android:layout_weight="5"
                android:padding="10sp"
                android:background="@drawable/custom_suckhoe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox

                    android:id="@+id/cb_suckhoe_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sức khỏe tốt"
                    android:button="@null"
                    android:drawableStart="@drawable/custom_checkbox"
                    android:layoutDirection="rtl"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/hindsiliguri_regular"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_add_sk"
        android:layout_margin="24sp"
        android:background="@drawable/custom_btn"
        android:layout_below="@id/lnl_sk"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="Gửi thông tin"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/helveticaneue_bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_history_sk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_add_sk"
        android:layout_marginStart="24sp"
        android:layout_marginEnd="24sp"
        android:layout_marginBottom="24sp"
        android:fontFamily="@font/helveticaneue_bold"
        android:text="Lịch sử theo dõi sức khỏe"
        android:textColor="@color/color_main"
        android:textSize="24sp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_sk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_history_sk"
        android:layout_marginStart="24sp"
        android:layout_marginEnd="25sp" />
</RelativeLayout>