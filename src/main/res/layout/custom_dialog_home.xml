<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:background="@drawable/custom_dialog"
           android:layout_margin="20sp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/img_dialog_home"
               android:layout_width="wrap_content"
               android:layout_height="250sp"
               android:layout_centerHorizontal="true"
               android:background="@drawable/bg_home_dialog" />

           <TextView
               android:id="@+id/tv_name_home"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/img_dialog_home"
               android:layout_marginTop="10sp"
               android:fontFamily="@font/helveticaneue_bold"
               android:gravity="center"
               android:textAllCaps="true"
               android:padding="10sp"
               android:text="Xin Chào Nguyễn Văn Quỳnh"
               android:textColor="@color/color_main"
               android:textSize="18sp"
               tools:ignore="HardcodedText" />

           <TextView
               android:id="@+id/tv_toast"

               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/tv_name_home"
               android:layout_marginTop="10sp"
               android:fontFamily="@font/hindsiliguri_medium"
               android:gravity="center"
               android:padding="10sp"
               android:text="Hãy khai báo y tế để bảo vệ mình và mọi người nhé"
               android:textColor="@color/black"
               android:textSize="16sp"

               tools:ignore="HardcodedText" />

           <LinearLayout
               android:orientation="horizontal"
               android:weightSum="10"
               android:padding="10sp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/tv_toast"
               android:layout_marginTop="15sp">

               <Button
                   android:id="@+id/btn_dongy_home"
                   android:layout_width="match_parent"
                   android:layout_height="50sp"
                   android:layout_weight="5"
                   android:background="@drawable/custom_btn"
                   android:fontFamily="@font/helveticaneue_bold"
                   android:text="Đồng ý"
                   android:textColor="@color/white"
                   android:textSize="14sp"
                   android:layout_marginEnd="5sp"
                   tools:ignore="HardcodedText,InefficientWeight" />
               <Button
                   android:layout_marginStart="5sp"
                   android:id="@+id/btn_cancel_home"
                   android:layout_width="match_parent"
                   android:layout_height="50sp"
                   android:layout_weight="5"
                   android:background="@drawable/custom_btn_border"
                   android:fontFamily="@font/helveticaneue_bold"
                   android:text="hủy"
                   android:textColor="@color/color_main"
                   android:textSize="14sp"
                   tools:ignore="HardcodedText" />

           </LinearLayout>
       </RelativeLayout>
   </ScrollView>
</RelativeLayout>