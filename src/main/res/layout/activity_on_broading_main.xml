<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    tools:context=".View.Activity.OnBroadingMain_Activity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager_OnBroading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/lnl_onBoarding" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/circle"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginTop="600sp"
        android:layout_marginBottom="30dp"
        app:ci_drawable="@drawable/custom_circle"

        />
<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/lnl_onBoarding"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:padding="10sp"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_onBoarding"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_btn"
        android:text="Skip"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="HardcodedText,RtlHardcoded" />
</LinearLayout>
</RelativeLayout>